<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_black"
    tools:context=".favorite.ui.FavoritesFragment">

    <TextView
        android:id="@+id/favorites_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_size_64"
        android:layout_marginTop="@dimen/dimens_size_24"
        android:layout_marginStart="@dimen/dimens_size_16"
        android:fontFamily="@font/ys_text_medium"
        android:gravity="center_vertical"
        android:text="@string/favorites"
        android:textColor="?attr/colorOnSecondary"
        android:textFontWeight="500"
        android:textSize="@dimen/text_size_22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/placeholder_container_favorites_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/placeholder_image_view_favorites_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/placeholder_incorrect_request" />
        <TextView
            android:id="@+id/placeholder_text_view_favorites_error"
            style="@style/PlaceholderTextStyle"
            android:gravity="center"
            android:text="@string/failed_to_get_list_of_vacancies" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favorites_header"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/placeholder_container_favorites_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/placeholder_image_view_favorites_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/placeholder_empty_favorite" />
        <TextView
            android:id="@+id/placeholder_text_view_favorites_empty"
            style="@style/PlaceholderTextStyle"
            android:gravity="center"
            android:text="@string/the_list_is_empty" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
