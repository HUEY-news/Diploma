<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="?attr/white_black"
tools:context=".filter.ui.IndustryFragment">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/industry_toolbar"
    style="@style/ToolbarAppStyle"
    android:title="@string/industry_selection"
    android:collapseIcon="@drawable/icon_arrow_forward"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<EditText
    android:id="@+id/industry_edit_text"
    style="@style/SearchEditTextStyle"
    android:layout_marginTop="@dimen/dimens_size_20"
    android:hint="@string/enter_industry"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/industry_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/industry_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimens_size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/industry_edit_text"
        app:layout_constraintBottom_toTopOf="@id/сhoose_filter_button"
       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/сhoose_filter_button"
        style="@style/ButtonFilterStyle"
        android:background="@drawable/shape_button_filter_background"
        android:text="@string/сhoose"
        android:layout_marginBottom="@dimen/dimens_size_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
