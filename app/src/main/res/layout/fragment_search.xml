<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primaryBackgroundColor"
    tools:ignore="hardcodedText" >

    <TextView
        android:id="@+id/header_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_size_16"
        android:layout_marginTop="@dimen/dimens_size_20"
        android:fontFamily="@font/ys_text_medium"
        android:text="Поиск вакансий"
        android:textColor="?attr/primaryTextColor"
        android:textFontWeight="500"
        android:textSize="@dimen/text_size_22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/filter_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_size_20"
        android:background="?attr/primaryBackgroundColor"
        android:src="@drawable/icon_filter_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_text_view"
        app:tint="?attr/primaryTextColor" />

    <EditText
        android:id="@+id/search_field_edit_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_size_56"
        android:layout_marginHorizontal="@dimen/dimens_size_16"
        android:layout_marginTop="@dimen/dimens_size_20"
        android:background="@drawable/shape_search_field_background"
        android:drawableEnd="@drawable/icon_search"
        android:drawableTint="@color/black"
        android:fontFamily="@font/ys_text_regular"
        android:hint="Введите запрос"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:minHeight="@dimen/dimens_size_56"
        android:paddingHorizontal="@dimen/dimens_size_8"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="?attr/secondaryTextColor"
        android:textCursorDrawable="@drawable/shape_search_field_cursor"
        android:textFontWeight="400"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_text_view" />

    <ImageButton
        android:id="@+id/reset_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_size_8"
        android:background="?attr/secondaryBackgroundColor"
        android:src="@drawable/icon_close"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/search_field_edit_text"
        app:layout_constraintEnd_toEndOf="@id/search_field_edit_text"
        app:layout_constraintTop_toTopOf="@id/search_field_edit_text"
        app:tint="@color/black"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/vacancy_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_size_16"
        android:layout_marginTop="@dimen/dimens_size_12"
        android:background="@drawable/shape_vacancy_message_background"
        android:ellipsize="middle"
        android:fontFamily="@font/ys_text_regular"
        android:paddingHorizontal="@dimen/dimens_size_12"
        android:paddingVertical="@dimen/dimens_size_4"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_field_edit_text"
        tools:text="Таких вакансий нет"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/placeholder_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_size_16"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_field_edit_text" >

        <ImageView
            android:id="@+id/placeholder_image_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_size_223"
            android:layout_gravity="center"
            android:src="@drawable/placeholder_empty_search"
            tools:src="@drawable/placeholder_incorrect_request" />

        <TextView
            android:id="@+id/placeholder_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ys_text_medium"
            android:gravity="center"
            android:textColor="?attr/primaryTextColor"
            android:textFontWeight="500"
            android:textSize="@dimen/text_size_22"
            tools:text="Не удалось получить\nсписок вакансий" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="46dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_field_edit_text"
        tools:visibility="gone" />

    <ProgressBar
        android:id="@+id/center_progress_bar"
        android:layout_width="@dimen/dimens_size_36"
        android:layout_height="@dimen/dimens_size_36"
        android:indeterminateTint="@color/blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_field_edit_text" />

    <ProgressBar
        android:id="@+id/bottom_progress_bar"
        android:layout_width="@dimen/dimens_size_36"
        android:layout_height="@dimen/dimens_size_36"
        android:layout_marginBottom="@dimen/dimens_size_22"
        android:indeterminateTint="@color/blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
