<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarAppStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:backgroundTint">?attr/white_black</item>
        <item name="android:textColor">?attr/black_white</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/dimens_size_56</item>
        <item name="android:layout_marginHorizontal">@dimen/dimens_size_16</item>
        <item name="android:background">@drawable/shape_search_field_background</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/gray_white</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:paddingHorizontal">@dimen/dimens_size_12</item>
        <item name="singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/shape_search_field_cursor</item>
        <item name="android:drawableEnd">@drawable/icon_search</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="VacancyMessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dimens_size_16</item>
        <item name="android:layout_marginTop">@dimen/dimens_size_12</item>
        <item name="android:paddingHorizontal">@dimen/dimens_size_12</item>
        <item name="android:paddingVertical">@dimen/dimens_size_4</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_vacancy_message_background</item>
        <item name="singleLine">true</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_width">@dimen/dimens_size_36</item>
        <item name="android:layout_height">@dimen/dimens_size_36</item>
        <item name="android:indeterminateTint">@color/blue</item>
    </style>

    <style name="PlaceholderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimens_size_16</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">?attr/black_white</item>
    </style>

    <style name="ItemVacancyDetailsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dimens_size_12</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:backgroundTint">?attr/white_black</item>
        <item name="android:textColor">?attr/black_white</item>
    </style>

    <style name="DetailsVacancyTextStyleRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">?attr/black_white</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="DetailsVacancyTextStyleMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">?attr/black_white</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="FiltrationVacancyTextStyleRegular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="ForwardArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimens_size_16</item>
        <item name="android:layout_gravity">center|end</item>
    </style>

    <style name="MyOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="boxStrokeColor">@drawable/text_input_box_stroke</item>
    </style>

    <style name="TextEditorOutLinedStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/gray_white</item>
        <item name="android:textColorHint">?attr/gray_white</item>
        <item name="android:textCursorDrawable">@drawable/shape_search_field_cursor</item>
    </style>

    <style name="ButtonFilterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dimens_size_16</item>
        <item name="android:layout_marginBottom">@dimen/dimens_size_8</item>
        <item name="android:paddingVertical">@dimen/dimens_size_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontWeight">400</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
